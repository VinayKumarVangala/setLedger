# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/setledger
MONGO_TEST_URI=mongodb://localhost:27017/setledger_test
DB_NAME=setledger

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# TOTP Configuration
TOTP_SECRET=your-totp-secret-key
TOTP_ISSUER=setLedger
TOTP_WINDOW=2
TOTP_STEP=30

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# AI Services
AI_API_KEY=your-ai-api-key
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gemini-pro
AI_MAX_TOKENS=1000

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data

# Email Configuration
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@setledger.com
EMAIL_SERVICE=sendgrid

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_MAX=3
CORS_ORIGIN=http://localhost:3000

# External APIs
GST_API_KEY=your-gst-api-key
GST_API_URL=https://api.gst.gov.in
SMS_API_KEY=your-sms-api-key
PAYMENT_GATEWAY_KEY=your-payment-gateway-key

# File Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads
STATIC_FILES_PATH=./public

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
CLOUD_STORAGE_BUCKET=your-backup-bucket