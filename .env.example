# =============================================================================
# setLedger Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# BACKEND CONFIGURATION (.env for backend/)
# -----------------------------------------------------------------------------

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/setledger?retryWrites=true&w=majority
MONGO_TEST_URI=mongodb://localhost:27017/setledger_test
DB_NAME=setledger

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-security
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-different-from-jwt-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# TOTP Configuration
TOTP_SECRET=your-totp-master-secret-for-generating-user-specific-secrets
TOTP_ISSUER=setLedger
TOTP_WINDOW=2
TOTP_STEP=30

# Firebase Configuration (Backend)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour\nPrivate\nKey\nHere\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com

# AI Services
AI_API_KEY=your-primary-ai-service-api-key
GEMINI_API_KEY=your-google-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gemini-pro
AI_MAX_TOKENS=1000

# Email Service
EMAIL_API_KEY=your-sendgrid-or-mailgun-api-key
EMAIL_FROM=noreply@setledger.com
EMAIL_SERVICE=sendgrid

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_MAX=3
CORS_ORIGIN=http://localhost:3000

# External APIs
GST_API_KEY=your-government-gst-api-key
GST_API_URL=https://api.gst.gov.in
SMS_API_KEY=your-sms-service-api-key
PAYMENT_GATEWAY_KEY=your-payment-gateway-key

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION (.env for frontend/)
# -----------------------------------------------------------------------------

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# Firebase Configuration (Client-side)
REACT_APP_FIREBASE_API_KEY=your-firebase-web-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789012
REACT_APP_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Authentication Configuration
REACT_APP_JWT_STORAGE_KEY=setledger_token
REACT_APP_REFRESH_TOKEN_KEY=setledger_refresh
REACT_APP_SESSION_TIMEOUT=1440
REACT_APP_AUTO_LOGOUT_WARNING=300

# Application Configuration
REACT_APP_APP_NAME=setLedger
REACT_APP_APP_VERSION=1.0.0
REACT_APP_COMPANY_NAME=setLedger Solutions
REACT_APP_SUPPORT_EMAIL=support@setledger.com

# Feature Flags
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=false
REACT_APP_LOG_LEVEL=info

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# Deployment Configuration
PUBLIC_URL=https://yourusername.github.io/setLedger
REACT_APP_DEPLOYMENT_ENV=development

# -----------------------------------------------------------------------------
# DEPLOYMENT SECRETS (GitHub Secrets)
# -----------------------------------------------------------------------------

# Backend Deployment (Render)
# RENDER_SERVICE_ID=srv_xxxxxxxxxxxxx
# RENDER_API_KEY=rnd_xxxxxxxxxxxxx
# BACKEND_URL=https://your-app.onrender.com

# Backend Deployment (Heroku - Alternative)
# HEROKU_API_KEY=xxxxxxxxxxxxx
# HEROKU_APP_NAME=setledger-backend
# HEROKU_EMAIL=your-email@example.com

# Frontend Deployment (GitHub Pages)
# CUSTOM_DOMAIN=setledger.yourdomain.com

# -----------------------------------------------------------------------------
# SETUP INSTRUCTIONS
# -----------------------------------------------------------------------------

# 1. Copy this file to .env in respective directories:
#    cp .env.example backend/.env
#    cp .env.example frontend/.env

# 2. Update all placeholder values with your actual credentials

# 3. Never commit .env files to version control

# 4. For production, use environment-specific values

# 5. Ensure all secrets are properly secured and rotated regularly