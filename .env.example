# Database Configuration
MONGO_URI=mongodb://localhost:27017/setledger
POSTGRES_URL=postgresql://username:password@localhost:5432/setledger
FIREBASE_CONFIG={"apiKey":"your-api-key","authDomain":"your-domain"}

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
KMS_KEY=your-kms-encryption-key-for-totp

# TOTP Configuration
TOTP_SECRET=your-totp-secret-key

# API Keys
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
GST_API_KEY=your-gst-api-key

# Email Configuration
EMAIL_API_KEY=your-email-service-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5001
AI_FALLBACK_ENABLED=true
AI_ACCURACY_THRESHOLD=10

# Fallback Configuration
FALLBACK_DATA_PATH=./data/fallback
DATASET_REFRESH_INTERVAL=86400
FORCE_API_FAILURE=false

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Monitoring
ACCURACY_MONITORING=true
DEVIATION_ALERTS=true
PERFORMANCE_LOGGING=true